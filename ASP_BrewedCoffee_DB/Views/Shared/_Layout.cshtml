<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@Config["MainPageTitle"]</title>
        <meta name="keywords" content="" />
        <meta name="description" content="" />
        <link href="@Config["path_css-file"]" rel="stylesheet" type="text/css" media="screen" asp-append-version="true"/>
        <link href="/css/media.css" rel="stylesheet" type="text/css" media="screen" asp-append-version="true">
    </head>
    <body>
        <div class="container">
            @await Html.PartialAsync("_Header")
            <div id="main">
                @RenderBody()
            </div>
            @await Html.PartialAsync("_Footer")
        </div>
        <script type="text/javascript" src="/js/main.js" asp-append-version="true"></script>
    </body>
</html>

