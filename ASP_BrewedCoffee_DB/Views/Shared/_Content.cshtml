@using ASP_BrewedCoffee_DB.Models;
@{ 
    int posts_count = int.Parse(CConfService.DB.GetOptionsValue("CountFilteredPosts"));
    int posts_per_page = int.Parse(CConfService.DB.GetOptionsValue("PostsPerPage"));
}
<div id="content">
    @await Html.PartialAsync("_Sketches")
    @if (posts_count > posts_per_page)
    {
        @await Html.PartialAsync("_Pagination")
    }
</div>