@model CPost
<div class="post">
    <div class="post-image-box"></div>
    <h3 class="post-title">@Model.Title</h3>
    @await Html.PartialAsync("_LikeAction", Model)
    @await Html.PartialAsync("_FavoriteAction", Model)
    <p class="post-byline"><small>Posted on @Model.CreatedDate.ToShortDateString() by @Model.Author</small></p>
    <div class="post-entry"><p>@Model.Content</p></div>
</div>
